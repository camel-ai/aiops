# ==============================================
# MCDP 多云运维管理平台 - 环境变量配置
# ==============================================

# 数据库配置
DB_PASSWORD=your_secure_mysql_password_here
DB_NAME=mcdp
DB_USER=root
DB_HOST=mcdp-database
DB_PORT=3306

# JWT和应用密钥配置
JWT_SECRET=your_jwt_secret_key_here_32_characters_long
SECRET_KEY=your_app_secret_key_here_32_characters_long
JWT_TOKEN_EXPIRES=86400

# ==============================================
# AI API密钥配置 - 请填入您的真实API密钥
# ==============================================

# DeepSeek API配置
DEEPSEEK_API_KEY=sk-your_deepseek_api_key_here

# OpenAI API配置
OPENAI_API_KEY=sk-your_openai_api_key_here
OPENAI_API_BASE_URL=https://api.openai.com/v1
OPENAI_API_MODEL=gpt-4o

# Anthropic API配置
ANTHROPIC_API_KEY=sk-ant-your_anthropic_api_key_here
ANTHROPIC_API_BASE_URL=https://api.anthropic.com/v1
ANTHROPIC_API_MODEL=claude-3-5-sonnet-20241022

# AI模型提供商选择 (可选值: openai, anthropic, deepseek)
AI_MODEL_PROVIDER=openai

# ==============================================
# Docker Registry配置 - 用于推送镜像
# ==============================================

# Docker Hub用户名 (必填)
REGISTRY_USERNAME=yiminghub2025

# Docker Hub密码 (可选，用于自动登录)
REGISTRY_PASSWORD=your_dockerhub_password_or_token

# 镜像标签版本
IMAGE_TAG=latest

# ==============================================
# 应用配置
# ==============================================

# 调试模式 (生产环境请设置为False)
DEBUG=False

# 文件上传配置
MAX_CONTENT_LENGTH=104857600
UPLOAD_FOLDER=upload 